<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="240dp"
    android:layout_height="140dp"
    android:background="@drawable/round_dialog_bg">


    <team.hex.wallex.ui.widget.CustomTextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="70"
        android:gravity="center"
        app:font="IranSans"
        android:text="@string/bazaarNotInstalled"
        android:textColor="@color/colorGrayDark"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="30"
        android:orientation="horizontal">

        <team.hex.wallex.ui.widget.CustomTextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="49.8"
            app:font="IranSans"
            android:id="@+id/btnInstallBazaar"
            android:textColor="@color/colorGrayDark"
            android:text="@string/cafeBazaar"
            android:gravity="center"/>

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@color/colorGrayDark"
            android:layout_weight="0.4"
            android:visibility="visible"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"/>

        <team.hex.wallex.ui.widget.CustomTextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="49.8"
            android:id="@+id/btnOk"
            android:textColor="@color/colorGrayDark"
            app:font="IranSans"
            android:text="@string/ok"
            android:gravity="center"/>

    </LinearLayout>


</LinearLayout>