<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorBlackOverlay">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true">

        <team.hex.wallex.ui.widget.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            app:font="IranSansBold"
            android:textSize="20dp"
            android:text="@string/getPermission"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:layout_marginBottom="30dp"
            />

        <team.hex.wallex.ui.widget.CustomButton
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/colorYellow"
            android:text="@string/permissionToStorage"
            app:font="IranSansMedium"
            android:textSize="16dp"
            android:textColor="@color/colorBlackOverlay"
            android:id="@+id/btnGetPermission"/>


    </LinearLayout>



</RelativeLayout>